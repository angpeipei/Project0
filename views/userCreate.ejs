    <div class="container"><form method="post" action="">
      <h1 class="h3 mb-3 fw-normal">Register new user</h1>
  
      <div class="form-group mb-3">
        <label for="name">Name</label>
        <input type="name" class="form-control" id="name" name="name" placeholder="Name" required>
      </div>
      <div class="form-group mb-3">
        <label for="email">Email address</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" required>
      </div>
      <div class="form-group mb-3">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
      </div>
      <div class="form-group mb-3">
        <label for="password">Confirm Password</label>
        <input type="password" class="form-control" id="password" name="confirmPassword" placeholder="Confirm Password"  required>
      </div>
      <% if (isAuthenticated) if (isAdmin){ %>
      <div class="form-check form-switch mb-3">
        <label class="form-check-label" for="isAdmin">Is administrator</label>
        <input type="checkbox" class="form-check-input" id="isAdmin" name="isAdmin">
      </div>
      <% } %>   
      <div>  
        <button class="btn btn-primary" type="submit">Register</button>
      </div> 
    </form>
  </div>